{{!-- The tag below includes the header - partials/header.hbs --}}
{{> header}}

{{!-- If we have a site cover, display that - else nothing --}}
<header class="main-header post-head
    {{#if @settings.cover}} brown softlight" style="background-image: url({{url @settings.cover}});
    {{else}}no-cover{{/if}}">
    <nav class="main-nav overlay clearfix">
        {{#if @settings.logo}}<a class="blog-logo" href="{{url}}"><img src="{{url @settings.logo}}" alt="{{@settings.title}}" /></a>{{/if}}
        <a class="menu-button icon-menu" href="#"><span class="word">Menu</span></a>
    </nav>

    <div class="vertical">
        <div class="main-header-content inner">
            <h1 class="page-title">{{@settings.title}}</h1>
            {{!-- Show main heading depending on the user's query --}}
            <h2 class="page-description">
                {{#if query}}
                    Results for “{{query}}”
                {{else}}
                    Search
                {{/if}}
	    </h2>
        </div>
    </div>
    <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
</header>

{{!-- The main content area on the homepage --}}
<main class="content" role="main">

    {{!-- Are there any matching posts? If so, show the post loop. --}}
    {{#is pagination.total_items '>' 0}}
        {{!-- The tag below includes the post loop - partials/loop.hbs --}}
        {{> loop}}
    {{else}}
        <article class="post">
            <header class="post-header">
                <h1 class="post-title">
                    {{#if query}}
                        No Posts Found
                    {{else}}
                        What are you looking for?
                    {{/if}}
                </h1>
            </header>

            <section class="post-content">
                <p>
                    {{#if query}}
                        Try again?
                    {{else}}
                        Type your search below to get started.
                    {{/if}}
                </p>
                <form action="{{search_url}}" method="get" autocomplete="off">
                    <input type="search" name="s" placeholder="Search">
                    <button type="submit">Go</button>
                </form>
            </section>
        </article>
    {{/is}}

</main>

{{!-- The tag below includes the footer - partials/footer.hbs --}}
{{> footer}}