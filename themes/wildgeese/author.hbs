{{!-- The tag below includes the header - partials/header.hbs --}}
{{> header}}

{{!-- The big featured header --}}

{{!-- Everything inside the #author tags pulls data from the author --}}
{{#author}}
    <header class="main-header author-head
	{{#if cover}} grey colordodge" style="background-image: url({{url cover}});
	{{else if @settings.cover}} dodgerblue softlight" style="background-image: url({{url @settings.cover}});
	{{else}}no-cover{{/if}}">
        <nav class="main-nav overlay clearfix">
            {{#if @settings.logo}}<a class="blog-logo" href="{{url}}"><img src="{{url @settings.logo}}" alt="{{@settings.title}}" /></a>{{/if}}
            <a class="menu-button icon-menu" href="#"><span class="word">Menu</span></a>
        </nav>
    </header>

    <section class="author-profile inner">
        {{#if avatar}}
        <figure class="author-image">
            <div class="img" style="background-image: url({{url avatar}})"><span class="hidden">{{name}}'s Picture</span></div>
        </figure>
        {{/if}}
        <h1 class="author-title">{{name}}</h1>
        {{#if bio}}
            {{bio}}
        {{/if}}

        {{!-- Only show author meta data on page 1 --}}
        {{#is ../pagination.current_page '1'}}
        <div class="author-meta">
            {{#if location}}<span class="author-location icon-location">{{location}}</span>{{/if}}
            {{#if website}}<span class="author-link icon-link"><a href="{{website}}">{{website}}</a></span>{{/if}}
            <span class="author-stats"><i class="icon-stats"></i> {{plural ../pagination.total_items empty='No posts' singular='% post' plural='% posts'}}</span>
        </div>
        {{/is}}
    </section>
{{/author}}

{{!-- The main content area on the homepage --}}
<main class="content" role="main">

    {{!-- The tag below includes the post loop - partials/loop.hbs --}}
    {{> loop}}

</main>

{{!-- The tag below includes the footer - partials/footer.hbs --}}
{{> footer}}